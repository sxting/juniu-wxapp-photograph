@import '../../../style/weui.wxss';
@import '../../../style/common.wxss';

.check-all {
  color: #999999;
  font-size: 28rpx;
}
.check-all .icon-rightblue {
  font-size: 32rpx;
  margin-left: 10rpx
}
/* 弹框 */
.alert-collage-bg {
  background-color: rgba(0, 0, 0, 0.6);
  position: fixed;
  top: 0;
  left: 0;
  width: 100vw;
  height: 100vh;
  z-index: 100;
}
.alert-collage-bg .alert-collage-box {
  border-radius: 0.37333333rem;
  background-color: #fff;
  position: absolute;
  width: 600rpx;
  height: 696rpx;
  top: 50%;
  left: 50%;
  margin-top: -348rpx;
  margin-left: -300rpx;
}

.alert-collage-bg .alert-collage-box .collage-title-alert {
  width: 100%;
  height: 132rpx;
  position: relative;
  text-align: center;
  font-family: PingFangSC-Regular;
  font-size: 36rpx;
  color: #000000;
  letter-spacing: 0;
  border-bottom: 2rpx solid #DDDDDD;
}
.alert-collage-bg .alert-collage-box .collage-title-alert .hotting-collage {
  line-height: 132rpx;
}
.alert-collage-bg .alert-collage-box .collage-title-alert .icon-sc {
  font-size: 46rpx;
  position: absolute;
  top: 30rpx;
  right: 30rpx;
  color: #AAAAAA;
  font-weight: bolder;
}
.alert-collage-bg .alert-collage-box .detail-person-content {
  padding: 20rpx 30rpx;
}
.alert-collage-bg .alert-collage-box .detail-person-content .detail-person-images {
  width: 100%;
  height: 500rpx;
  overflow-y: scroll;
  overflow-x: hidden;
}
.alert-collage-bg .alert-collage-box .detail-person-content .detail-person-images .img-url {
  width: 92rpx;
  height: 92rpx;
}
.alert-collage-bg .alert-collage-box .detail-person-content .detail-person-images .portrait{
  margin-right: 56rpx;
  margin-bottom: 42rpx;
  border-radius: 50%;
}
.alert-collage-bg .alert-collage-box .detail-person-content .detail-person-images .portrait:nth-of-type(4n) {
  margin-right: 0rem;
}
.alert-collage-bg .alert-collage-box .detail-person-content .detail-person-images view{
  float: left
}
.alert-collage-bg .alert-collage-box .detail-person-content .detail-person-images .img-url image{
  width: 100%;
  height: 100%;
  border-radius: 50%;
}
.alert-collage-bg .alert-collage-box .detail-person-content .detail-person-images .special-symbol {
  border:  4rpx dashed rgba(136,136,136,0.50);
  text-align: center;
  line-height: 84rpx;
  font-size: 0;
  color: #C3C3C3;
  width: 84rpx;
  height: 84rpx;
  border-radius: 50%;
  float: left
}
.alert-collage-bg .alert-collage-box .detail-person-content .detail-person-images .special-symbol .icon-qm {
  font-size: 50rpx;
}
.diandian {
  border: 2rpx dashed rgba(136, 136, 136, 0.5);
  text-align: center;
  line-height: 140rpx;
  font-size: 0;
  color: #C3C3C3;
  width: 140rpx;
  height: 140rpx;
  border-radius: 50%;
  margin-left: 26rpx
}
.diandian .icon-diandian {
  font-size: 60rpx;
}