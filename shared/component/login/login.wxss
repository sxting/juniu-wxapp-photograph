.login-bg {
  background-color: rgba(0, 0, 0, 0.4);
  position: fixed;
  top: 0;
  bottom: 0;
  left: 0;
  right: 0;
  width: 100vw;
  height: 100vh; 
  z-index: 100;
}

.login-box {
  width: 600rpx;
  height: 660rpx;
  margin: 200rpx auto;
  background-color: #fff;
  border-radius: 16rpx;
  text-align: center;
  position: relative;
}

.login-top {
  width: 600rpx;
  height: 250rpx;
}

.login-top-bg {
  width: 600rpx;
  height: 250rpx;
  display: block;
}

.login-top-image {
  width: 124rpx;
  height: 118rpx;
  position: absolute;
  top: 64rpx;
  left: 50%;
  margin-left: -62rpx;
}

.login-title {
  font-size: 34rpx;
  color: #333333;
  margin-top: 80rpx;
}

.login-tip {
  font-size: 30rpx;
  color: #333333;
}

.login-btn {
  margin: 80rpx auto;
  background-color: #336964;
  color: #fff;
  border-radius: 14rpx;
  width: 500rpx;
  height: 86rpx;
  line-height: 86rpx;
  font-size: 34rpx;
}