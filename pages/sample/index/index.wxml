<view class='works-box mt-10' wx:if="{{worksList.length > 0}}">
  <view class='works-item-box' style='width:100%'>
    <view class='works-item' wx:for="{{worksList}}" bindtap='goWorkDetail' data-type='{{item.sourceType}}' data-list='{{item.merchantMediaDTOS}}' data-id='{{item.productionId}}'>
      <image wx:if="{{item.sourceType === 'VIDEO'}}" style='width:100%' class='video-icon' src='/asset/images/video.png'></image>
      <image class='work-img' src='{{item.url}}' style='height: {{item.height*2}}rpx;width:100%'></image>
      <view class='work-name'>{{item.name}} <text wx:if="{{item.sourceType !== 'VIDEO'}}"> / {{item.merchantMediaDTOS.length}}å¼ </text></view>
    </view>
  </view>
</view>