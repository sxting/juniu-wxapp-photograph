/* pages/personal/collage-order/order/order-list.wxss */
.page {
  position: relative;
  padding-bottom: 100rpx;
  min-height: 100vh;
  box-sizing: border-box;
  font-family: PingFangSC-Regular;
  background: #f6f6f6;
}
.tab {
  height: 88rpx;
  line-height: 88rpx;
  display: flex;
  border-bottom: 2rpx solid #f3f3f3;
  font-size: 32rpx;
  color: #111111;
  background:#fff;

}
.tab-item {
  width: 25%;
  text-align: center;
}
.active {
  border-bottom: 4rpx solid #336964;
  color: #336964;
}
.list-content-box{
  padding: 30rpx;
  font-size: 0;
  background:#f6f6f6;
}
.list-content{
  width: 100%;
  height: auto;
  border-radius: 8rpx;
  margin-bottom: 30rpx;
  background:#fff;
}
.list-content-box .list-content:last-of-type{
  margin-bottom: 0rpx
}
.list-infor{
  width: 100%;
  height: 266rpx;
}
.list-title{
  padding: 0 26rpx;
}
.list-title text{
  font-family: PingFangSC-Regular;
  font-size: 26rpx;
  color: #336964;
  letter-spacing: 0;
  line-height: 72rpx;
}
.list-title text:first-of-type{
  font-size: 32rpx;
  color: #111111;
}
.detail-infor{
  position: relative;
  padding: 0 26rpx 30rpx;
  height: 150rpx;
}
.img-box{
  width: 200rpx;
  height: 150rpx;
  border-radius: 8rpx;
  margin-right: 30rpx;
}
.img-box image{
  width: 100%;
  height: 100%;
}
.right-infor{
  font-family: PingFangSC-Regular;
  font-size: 0;
  color: #333333;
  letter-spacing: 0;
  word-spacing: 0
}
.right-infor view:first-of-type{
  font-size: 32rpx;
  color: #111111;
}
.right-infor view:last-of-type{
  font-size: 28rpx;
  color: #336964;
  margin-top:17rpx;
}
.right-infor view:last-of-type text{
  font-size: 30rpx;
}
.right-infor view:nth-of-type(2){
  line-height: 50rpx;
  font-size: 26rpx;
  color:#999;
}
.remaining-time{
  font-family: PingFangSC-Regular;
  font-size: 28rpx;
  color: #333;
  letter-spacing: 0;
  height: 88rpx;
  line-height: 88rpx;
  text-align: right;
  padding-right: 26rpx;
  border-bottom: 2rpx solid #F3F3F3;
}
.remaining-time text{
  color: #336964;
}
.btn-box{
  padding-right: 26rpx;
  height: 96rpx;
  font-family: PingFangSC-Regular;
  font-size: 26rpx;
  color: #336964;
  text-align: right;
  padding-top:15rpx;
}
.btn-box text{
  display: inline-block;
  background-color: #FFFFFF;
  border: 2rpx solid #336964;
  border-radius: 32rpx;
  margin-top: 16rpx;
  height: 52rpx;
  line-height: 52rpx;
  text-align: center
}
.btn-box text.cancel-btn{
  color: #999999;
  font-size: 26rpx;
  border: 2rpx solid #999999;
  margin-right: 20rpx;
  width: 126rpx;
}
.btn-box text.pay-btn{
  width: 160rpx;
}
.btn-box .invent-btn{
  width: 212rpx;
  display: inline-block;
  background-color: #FFFFFF;
  border: 2rpx solid #336964;
  margin-top: 16rpx;
  height: 52rpx;
  line-height: 52rpx;
  font-size: 26rpx;
  color: #336964;
  text-align: center
}
.jn-bottom {
  background: #fff;
  text-align: center;
  height: 50rpx;
  width: 100vw;
  padding-bottom: 20rpx
}
.jn-bottom image {
  width: 80rpx;
  height: 40rpx;
}