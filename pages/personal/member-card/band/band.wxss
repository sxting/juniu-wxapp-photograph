.page {
  border-top: 2rpx solid #f3f3f3;
}

.placeholder {
  font-size: 30rpx;
  color: #d3d3d3;
}

.input-card {
  margin-top: 30rpx;
}

.input-box {
  height: 88rpx;
  line-height: 88rpx;
  position: relative;
}



.input-box input {
  height: 88rpx;
  line-height: 88rpx;
  padding-left: 20rpx;
  width: 450rpx;
  background:#F6F6F6;
}

.input-box button {
  background: #fff;
  width: 100%;
  text-align: center;
  font-size: 26rpx;
  color: #336964;
  padding: 6px;
  position: absolute;
  border-radius:0;
}

.code-btn {
  position: absolute;
  width: 190rpx;
  top: 0;
  right: 0;
  height: 88rpx;
  line-height: 88rpx;
  font-size: 28rpx;
  text-align: center;
}

.btn-active {
  background: #336964 !important;
  border-radius: 0px;
  font-family: PingFangSC-Regular;
  font-size: 16px;
  color: #fff !important;
  border: none;
  height: 80rpx;
  line-height: 80rpx;
}



.btn-bd {
  margin-top: 40rpx;
  padding-left: 15px;
  padding-right: 15px;
  
}

.btn-normal {
  background: #c4c4c4 !important;
  font-family: PingFangSC-Regular;
  font-size: 16px;
  color: #fff !important;
  border: none;
  border-radius:0;
  height: 80rpx;
  line-height: 80rpx;
}

.btn-send-active {
  background: #fff !important;
  font-family: PingFangSC-Regular;
  color: #336964 !important;
  border: 2rpx solid #336964;
}
.btn-send-normal{
  background:#dedede;
  color:#999999;
}
