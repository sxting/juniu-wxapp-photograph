.page {
  position: relative;
  padding-bottom: 100rpx;
  min-height: 100vh;
  box-sizing: border-box;
}
.tab {
  height: 88rpx;
  line-height: 88rpx;
  display: flex;
  border-top: 2rpx solid #f3f3f3;
  border-bottom: 2rpx solid #f3f3f3;
  font-size: 32rpx;
  color: #111111;
}
.tab-item {
  width: 25%;
  text-align: center;
}

.order-form-list {
  width: 690rpx;
  margin: 0 auto;
}
.order-form-item {
  margin-top: 30rpx;
  width: 100%;
  box-shadow: 0 2rpx 6rpx 0 #D8D8D8;
  border-radius: 8rpx;
  box-sizing: border-box;
  padding: 20rpx 20rpx 0;
}
.order-form-subtitle {
  line-height: 50rpx;
  height: 50rpx;
}
.order-form-subtitle .fr {
  font-size: 26rpx;
}

.order-form-msg {
  display: flex;
  margin-top: 20rpx;
  padding-bottom: 20rpx;
}
.order-form-msg image {
  width: 200rpx;
  height: 150rpx;
  border-radius: 8rpx;
  margin-right: 30rpx;
}
.order-msg-right {
  display: inline-block;
  width: 400rpx;
}
.product-name {
  font-size: 32rpx;
  color: #111111;
  height: 56rpx;
  line-height: 50rpx;
  overflow:hidden; 
  text-overflow:ellipsis;
  display:-webkit-box; 
  -webkit-box-orient:vertical;
  -webkit-line-clamp:1;
}
.order-time {
  font-size: 26rpx;
  color: #333333;
}
.order-price {
  color: #ff6600;
  font-size: 30rpx;
}
.order-price text {
  font-size: 40rpx;
}

.comment {
  border-top: 2rpx solid #f3f3f3;
  height: 100rpx;
}
.comment-btn {
  width: 160rpx;
  height: 56rpx;
  line-height: 56rpx;
  color: #ff6600;
  border: 2rpx solid #ff6600;
  border-radius: 30rpx;
  font-size: 26rpx;
  float: right;
  text-align: center;
  margin-top: 20rpx;
}


.active {
  border-bottom: 4rpx solid #FF6700;
  color: #FF6700;
}
.color1 {
  color: #F0BF28;
}
.color2 {
  color: #03BC01;
}
.color3 {
  color: #FB5050;
}
.color4 {
  color: #939393;
}