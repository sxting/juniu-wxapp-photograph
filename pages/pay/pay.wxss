.product {
  /* height: 260rpx; */
  padding: 30rpx;
  box-sizing: border-box;
  display: flex;
}
.product image {
  width: 280rpx;
  min-width: 280rpx;
  height: 200rpx;
  border-radius: 8rpx;
}
.product-right {
  display: inline-block;
  padding-left: 30rpx;
}
.product-name {
  font-size: 28rpx;
  color: #333333;
  padding-top: 20rpx;
  height: 90rpx;
}
.product-price {
  color: #D43737;
  font-size: 34rpx;
  padding-top: 30rpx;
}

.sub-title {
  font-size: 30rpx;
}

.item {
  font-size: 28rpx;
  color: #333333;
}
.item>view {
  height: 88rpx;
  line-height: 88rpx;
  padding: 0 30rpx;
}

.count-btn {
  height: 44rpx;
  line-height: 44rpx;
  text-align: center;
  width: 128rpx;
  border: 2rpx solid #999;
  border-radius: 36rpx;
  margin-top: 20rpx;
}
.count-btn>text {
  width: 44rpx;
  height: 44rpx;
  display: inline-block;
}
.count-btn .count {
  padding: 0 6rpx;
  width: 40rpx;
  box-sizing: border-box;
}

.member-right {
  border-top: 2rpx solid #F3F3F3;
  border-bottom: 2rpx solid #F3F3F3;
}
.rights .fr {
  font-size: 24rpx;
  color: #FF6600;
}
.pay-price>.fr {
  font-size: 34rpx;
}

.tel>text, .note>text {
  width: 80rpx;
  display: inline-block;
}
.usermgs {
  position: relative;
}
.usermgs input {
  display: inline-block;
  position: absolute;
  height: 60rpx;
  line-height: 60rpx;
  vertical-align: middle;
  top: 16rpx;
  left: 100rpx;
}
.placeholder {
  font-size: 13px;
  color: #999999;
}

.pay-btn {
  width: 690rpx;
  height: 100rpx;
  text-align: center;
  line-height: 100rpx;
  background-color: #FF6600;
  color: #fff;
  font-size: 36rpx;
  margin: 0 auto;
  border-radius: 60rpx;
}

.bottom-btn {
  position: fixed;
  bottom: 0;
  width: 100vw;
  text-align: center;
  color: #fff;
  font-size: 36rpx;
  background-color: #ff6600;
}
.bottom-btn>view {
  width: 50%;
  display: inline-block;
  height: 100rpx;
  line-height: 100rpx;
}
.moreyh {
  background: #23252B;
}

.bottom-btn .disabled {
  background-color: #D8D8D8;
}

.pay-ju-bottom {
  bottom: 140rpx;
}